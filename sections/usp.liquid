<details class="page-usp usp-mob">
    <summary>
        {%- render 'global-icon',
            icon: 'delivery'
        -%}
        <p class="page-usp__mob-text">Pflanzen, Bäume & mehr mit schneller Lieferung</p>
        
      <span class="icon">  {%- render 'global-icon', icon: 'chevron-up' -%}</span>
    </summary>
    <p class="page-usp__blocks rte">
        {%- for block in section.blocks -%}
            {%- case block.type -%}
                {%- when 'mob_info' -%}
                    {%- if block.settings.heading != blank -%}
                        <span class="mob_info__heading">{% render 'icon-accordion', icon: block.settings.icon %}{{ block.settings.heading }}</span>
                    {%- endif -%}
                    {%- if block.settings.text != blank -%}
                        <p class="mob_info__text">{{ block.settings.text }}</p>
                    {%- endif -%}
            {%- endcase -%}
        {%- endfor -%}
    </p>
</details>

<ul class="list-unstyled page-usp usp-desk">
    {%- for block in section.blocks -%}
        {%- case block.type -%}
            {% when 'desk_usp'%}
                {%- if block.settings.desk-usp != blank -%}
                    <li> {%- render 'global-icon',
                        icon: 'checkmark'
                    -%} {{ block.settings.desk-usp }}
                    </li>
                {%- endif -%}
        {%- endcase -%}
    {%- endfor -%}
</ul>

<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}">
<link rel="stylesheet" href="{{ 'component-usp.css' | asset_url }}">

<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-usp.css' | asset_url | stylesheet_tag }}</noscript>

